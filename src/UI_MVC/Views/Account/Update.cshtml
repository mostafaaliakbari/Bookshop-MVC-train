@{
}
@model User

@{
    ViewData["Title"] = "ویرایش کاربر";
}

<form method="post" asp-action="Update">
 
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>ویرایش کاربر: @Model.UserName</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>

    
        <div class="mb-3">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Role" class="form-label">نقش کاربری</label>
         
            <select asp-for="Role" asp-items="Html.GetEnumSelectList<Role>()" class="form-select"></select>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">به‌روزرسانی</button>
        <a asp-controller="Users" asp-action="List" class="btn btn-secondary" style="width:150px">
            بازگشت به لیست
        </a>
    </div>
</form>