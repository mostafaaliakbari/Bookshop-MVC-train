@{
}
@{
    ViewData["Title"] = "پنل مدیریت فروشگاه کتاب";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">به پنل مدیریت خوش آمدید</h2>
    <hr />

    <div class="row justify-content-center">

        @* کارت ۱: مدیریت دسته‌بندی‌ها *@
        <div class="col-md-5 col-sm-12 mb-4">
            <div class="card shadow-lg text-center h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title">مدیریت دسته‌بندی‌ها</h5>
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <p class="card-text">مشاهده، ثبت، ویرایش و حذف دسته‌بندی‌ها و ژانرهای کتاب.</p>
                    <a asp-controller="Category" asp-action="List" class="btn btn-info mt-3">
                        <i class="bi bi-tag-fill"></i> ورود به بخش دسته‌بندی‌ها
                    </a>
                </div>
            </div>
        </div>

        @* کارت ۲: مدیریت کاربران *@
        <div class="col-md-5 col-sm-12 mb-4">
            <div class="card shadow-lg text-center h-100">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title">مدیریت کاربران</h5>
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <p class="card-text">مدیریت حساب‌های کاربری ادمین و مشتری (ثبت، ویرایش نقش، حذف).</p>
                    <a asp-controller="Account" asp-action="List" class="btn btn-warning mt-3">
                        <i class="bi bi-people-fill"></i> ورود به بخش کاربران
                    </a>
                </div>
            </div>
        </div>

     

    </div>
</div>

<style>

    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
        }
</style>