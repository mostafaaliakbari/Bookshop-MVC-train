@{
}
@model List<User>


@{
    ViewData["Title"] = "لیست کاربران";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">مدیریت کاربران</h2>
        </div>
        <div class="col-6 text-end">
          
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary">
                ثبت کاربر جدید
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>کد کاربری (Id)</th>
                    <th>نام کامل</th>
                    <th>نام کاربری</th>
                    <th>نقش</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.UserName</td>
                        <td>@item.Role.ToString()</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                            
                                <a asp-controller="Account" asp-action="Update" asp-route-id="@item.Id" class="btn btn-info mx-1">
                                    ویرایش
                                </a>
                         
                                <a asp-controller="Account" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1">
                                    حذف
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>هیچ کاربری ثبت نشده است.</p>
    }
</div>